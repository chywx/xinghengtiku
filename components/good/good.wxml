        <image src="/images/newimage/shuxian.png"></image>
        <view>正确率{{bfb}}%</view> 
        <image src="/images/newimage/shuxian.png"></image>
        <view>耗时 {{duration}}s</view> 
      </view>
    </view>
    <view class="pop_c">
      <view class="xuanyao"><button open-type='share'>炫耀一下</button></view>
      <view class="chacuo"><text>查看错题</text></view>
    </view>
    <!-- <view class="pop_b">
      <view>重新闯关</view>
      <view>下一章节</view>
    </view> -->
    <view class="close"><image src="/images/newimage/close.png" bindtap="_onClose"></image></view>
  </view>
</view>