.pop{width:100%;height:100%;background-color:#000;opacity:.6;position:fixed;left:0;top:0;}
.wxpop{position:absolute;width:690rpx;left:30rpx;top:20%;padding:0 30rpx;}
.pop_t{background-color:#297be8;border-radius:20rpx 20rpx 0 0;padding-top:20rpx;}
.good{display:flex;flex-direction: column;align-items: center;}
.good image{width:341rpx;height:66rpx;}
.sum{display: flex;align-items: center;justify-content: center;}
.sum image{width:484rpx;height:159rpx;}
.sum .score{position:absolute;font-size:32rpx;color:#fff;}
.sum .score text{font-size:130rpx;color:#fff;}
.count{display:flex;flex-direction: row;align-items: center;justify-content: space-around;font-size:26rpx;color:#fff;padding:20rpx;}
.count image{width:4rpx;height:26rpx;display:block;opacity:.2;}
.pop_c{background-color:#fff;display:flex;flex-direction: row;align-items: center;justify-content: space-around;padding:40rpx 20rpx;}
.pop_c .xuanyao button{display:block;width:240rpx;height:78rpx;line-height:78rpx;text-align:center;border-radius:200rpx;background-color:#99c733;color:#fff;font-size:28rpx;}
.pop_c .chacuo button{display:block;width:240rpx;height:78rpx;line-height:78rpx;text-align:center;border-radius:200rpx;border:1px solid #99c733;color:#99c733;font-size:28rpx;}
.pop_b{background-color:#f4f4f4;border-radius:0 0 20rpx 20rpx;display:flex;align-items: center;justify-content: space-between;font-size:26rpx;color:#297be8;padding:20rpx;}
.close{text-align:center;margin-top:20rpx;}
.close image{width:80rpx;height:80rpx;}
.show{display:block;}
.hide{display:none;}


.pop_t2{background-color:#b5b5b5;border-radius:20rpx 20rpx 0 0;padding-top:20rpx;}
.sum2{display: flex;align-items: baseline;justify-content: center;font-size:32rpx;color:#fff;}
.sum2 text{font-size:130rpx;color:#fff;}
