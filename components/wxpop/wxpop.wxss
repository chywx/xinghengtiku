.pop{width:100%;height:100%;background-color:#000;opacity:.6;position:fixed;left:0;top:0;}
.wxpop{position:absolute;width:80%;left:10%;top:20%;}
.wx{background-color:#297be7;border-radius:20rpx 20rpx 0 0;display:flex;flex-direction: column;align-items: center;
padding:40rpx;text-align:center;}
.wx .title{font-size:36rpx;color:#fff;margin-bottom:30rpx;}
.wx .lpz{margin-bottom:30rpx;}
.wx .lpz image{width:240rpx;height:217rpx;display:block;}
.wx .txt text{display:block;font-size:28rpx;color:#fff;line-height:44rpx;}
.btn_add{background-color:#fff;border-radius:0 0 20rpx 20rpx;padding:40rpx;}
.btn_add .add{background-color:#98c632;width:100%;line-height:70rpx;text-align:center;color:#fff;font-size:28rpx;border-radius:200rpx;display:flex;align-items:center;justify-content: center;}
.btn_add image{width:29rpx;height:30rpx;margin-right:10rpx;}
.close{text-align:center;margin-top:20rpx;}
.close image{width:80rpx;height:80rpx;}
.show{display:block;}
.hide{display:none;}